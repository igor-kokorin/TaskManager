@model IEnumerable<WorkItemListDto>

<div class="ui list" id="task-tree">
    @foreach (var item in Model)
    {
    <div class="item">
        <i class="tasks icon disabled"></i>
        <div class="content">
            <a class="header" asp-action="Display" asp-controller="Tasks" asp-route-id="@item.Id">@item.Title</a>
            <div class="description">@item.Status.GetDisplayName()</div>
            <partial name="_TreeView" model="@item.Children" />
        </div>
    </div>
    }
</div>