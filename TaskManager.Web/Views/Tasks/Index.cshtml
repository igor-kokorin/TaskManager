@model IEnumerable<WorkItemListDto>

@{
    ViewData["Title"] = "Задачи";
}

<div class="ui padded scrolling grid">
    <div class="three wide column task-tree">
        <partial name="_TreeView" model="@Model" />
    </div>
    <div class="thirteen wide column task-display-column">
        <div id="taskDisplay">
            @if (Model.Count() == 0)
            {
                <h2>У вас нет задач</h2>
            }
            else
            {
                <h2>Выберите задачу слева</h2>
            }
        </div>
    </div>
</div>